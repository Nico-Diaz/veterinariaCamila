---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Turnos Veterinaria Camila" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
    /* VARIABLES GLOBALES */
    :root {
        --primary: #7C2D96;       /* Morado Camila */
        --primary-dark: #5a1e6e;  /* Morado oscuro para hovers */
        --bg-color: #f3e5f5;      /* Fondo lila muy suave */
        --white: #ffffff;
        --text: #333333;
        --text-light: #666666;
    }

    /* Reset básico */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--bg-color);
        /* Degradado suave de fondo */
        background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
        color: var(--text);
        
        /* Esto centra la tarjeta en la pantalla */
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Estilos globales para Inputs y Selects 
       (Así no tienes que repetirlos en cada página) */
    input, select {
        width: 100%;
        padding: 14px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        font-family: inherit;
        outline: none;
        transition: all 0.3s ease;
        background: #fdfdfd;
        color: var(--text);
    }

    input:focus, select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(124, 45, 150, 0.1); /* Resplandor morado */
        background: #fff;
    }

    /* Placeholder color */
    ::placeholder {
        color: #aaa;
    }
</style>