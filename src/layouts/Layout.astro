---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Veterinaria Camila - Turnos Online" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
    /* VARIABLES GLOBALES - Aquí controlas los colores */
    :root {
        --color-primary: #7C2D96;    /* Morado Camila */
        --color-primary-dark: #5a1e6e; 
        --color-bg-light: #F8F5FA;   /* Fondo casi blanco con tinte morado */
        --color-text: #333333;
        --color-white: #ffffff;
        --radius: 12px;              /* Bordes redondeados */
    }

    /* Reset básico */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--color-bg-light);
        color: var(--color-text);
        line-height: 1.6;
    }

    /* Estilos generales de botones */
    .btn {
        display: inline-block;
        padding: 10px 25px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--color-primary);
        color: var(--color-white);
    }

    .btn-primary:hover {
        background-color: var(--color-primary-dark);
        transform: translateY(-2px);
    }
    
    /* Contenedor centralizado */
    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }
	img, picture, video, canvas, svg {
    display: block;
    max-width: 100%; /* Esto es vital: la imagen nunca será más ancha que su padre */
    height: auto;
}

/* Para evitar que el texto sea gigante en móviles */
html {
    font-size: 16px; /* Aseguramos base */
}

@media (max-width: 768px) {
    html {
        font-size: 14px; /* Bajamos un poco el tamaño de todo en celular */
    }
}
</style>