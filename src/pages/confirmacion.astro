<script>
    import { supabase } from '../lib/supabase';

    // 1. Capturamos los datos de la URL
    const params = new URLSearchParams(window.location.search);
    
    // Objeto con los datos limpios
    const datos = {
        nombre: params.get('nombre') || '-',
        mascota: params.get('mascota') || '-',
        telefono: params.get('telefono_cliente') || '-',
        email: params.get('email') || '-',
        servicio: params.get('servicio') || 'Castraci√≥n',
        fecha: params.get('fecha') || '-',
        hora: params.get('hora') || '-'
    };

    // 2. Rellenamos el HTML visualmente
    document.getElementById('res-nombre')!.innerText = datos.nombre;
    document.getElementById('res-mascota')!.innerText = datos.mascota;
    document.getElementById('res-telefono')!.innerText = datos.telefono;
    document.getElementById('res-email')!.innerText = datos.email;
    document.getElementById('res-servicio')!.innerText = datos.servicio;
    document.getElementById('res-fecha')!.innerText = datos.fecha;
    document.getElementById('res-hora')!.innerText = datos.hora;

    // 3. L√≥gica del Bot√≥n Confirmar
    const btn = document.getElementById('btn-confirmar') as HTMLButtonElement;
    const loadingMsg = document.getElementById('loading-msg') as HTMLElement;

    btn?.addEventListener('click', async () => {
        // A) UI de Carga: Desactivamos bot√≥n para evitar doble click
        btn.disabled = true;
        btn.innerText = "Procesando...";
        btn.style.opacity = "0.7";
        loadingMsg.style.display = "block";

        // B) GUARDAR EN SUPABASE
        const { error } = await supabase
            .from('turnos')
            .insert([{ 
                nombre: datos.nombre,
                mascota: datos.mascota,
                telefono: datos.telefono, // Guardamos el numero del cliente
                email: datos.email,
                fecha: datos.fecha,
                hora: datos.hora,
                servicio: datos.servicio,
                estado: 'Pendiente'
            }]);

        if (error) {
            console.error(error);
            alert('Ocurri√≥ un error al guardar el turno. Intenta de nuevo.');
            btn.disabled = false;
            btn.innerText = "Reintentar";
            loadingMsg.style.display = "none";
            return;
        }

        // C) PREPARAR WHATSAPP (A tu n√∫mero personal)
        const tu_numero = "5492612461691"; // TU N√öMERO
        
        const mensaje = `Hola! üêæ%0AQuiero confirmar mi turno de CASTRACI√ìN:%0A%0Aüë§ *Due√±o:* ${datos.nombre}%0Aüê∂ *Mascota:* ${datos.mascota}%0AüìÖ *Fecha:* ${datos.fecha}%0A‚è∞ *Hora:* ${datos.hora}%0Aüì± *Mi contacto:* ${datos.telefono}`;

        // D) ABRIR WHATSAPP Y REDIRIGIR
        // Abrimos WhatsApp en nueva pesta√±a
        window.open(`https://wa.me/${tu_numero}?text=${mensaje}`, '_blank');

        // Redirigimos la pesta√±a actual a la p√°gina de √©xito
        setTimeout(() => {
            window.location.href = '/exito';
        }, 500);
    });
</script>

<style>
    /* Estructura base centrada */
    .main-container { 
        width: 100%; 
        max-width: 500px; 
        padding: 20px; 
        display: flex; 
        flex-direction: column; 
        gap: 20px; 
        margin: 0 auto; 
    }
    
    .confirm-card {
        background: #ffffff;
        padding: 2.5rem;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0f0f0;
        text-align: center;
    }

    .success-icon { font-size: 3rem; margin-bottom: 10px; }
    h2 { color: var(--primary); margin-bottom: 5px; font-weight: 700; }
    .subtitle { color: #888; font-size: 0.9rem; margin-bottom: 25px; }

    /* Caja de Resumen */
    .summary-box {
        background-color: #FAFAFA;
        border: 2px solid #EEE;
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        font-size: 0.95rem;
        word-break: break-word; /* Evita que emails largos rompan el dise√±o */
    }

    .summary-row span { color: #666; min-width: 80px; }
    .summary-row strong { color: #333; font-weight: 600; text-align: right; }

    .divider { height: 1px; background: #e0e0e0; margin: 15px 0; }

    .summary-row.highlight strong {
        color: var(--primary);
        font-weight: 700;
    }

    /* Botones */
    .actions { display: flex; flex-direction: column; gap: 15px; }

    .btn-whatsapp {
        width: 100%;
        background-color: #25D366; /* Verde WhatsApp oficial */
        color: white;
        border: none;
        padding: 16px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 10px 20px rgba(37, 211, 102, 0.2);
        transition: transform 0.2s, background-color 0.2s;
    }

    .btn-whatsapp:hover { transform: translateY(-2px); background-color: #20bd5a; }
    
    .btn-whatsapp:disabled { background-color: #ccc; cursor: not-allowed; box-shadow: none; transform: none; }

    .btn-back {
        color: #888;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: color 0.2s;
    }
    .btn-back:hover { color: var(--primary); text-decoration: underline; }

    .loading-text {
        display: none;
        color: var(--primary);
        font-weight: 600;
        margin-top: 15px;
        font-size: 0.9rem;
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0% { opacity: 0.6; }
        50% { opacity: 1; }
        100% { opacity: 0.6; }
    }

    @media (max-width: 600px) {
        .main-container { padding: 0; min-height: 100dvh; justify-content: center; }
        .confirm-card { border-radius: 0; min-height: 100dvh; display: flex; flex-direction: column; justify-content: center; border: none; }
    }
</style>