---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Acceso | Veterinaria Camila">
    <div class="login-wrapper">
        <div class="glass-card">
            <div class="icon-lock">üîê</div>
            <h2>Bienvenida</h2>
            <p>Admin Veterinaria</p>
            
            <form id="login-form">
                <input type="email" id="email" placeholder="admin@veterinaria.com" required />
                <input type="password" id="password" placeholder="Contrase√±a..." required />
                <button type="submit" id="btn-login">Ingresar</button>
            </form>

            <p id="error-msg" class="error-text" style="display: none;"></p>
        </div>
    </div>
</Layout>

<script>
    import { supabase } from '../lib/supabase';

    const form = document.getElementById('login-form') as HTMLFormElement;
    const errorMsg = document.getElementById('error-msg')!;
    const btn = document.getElementById('btn-login')!;

    // 1. Si ya est√°s logueado, te mando directo al admin
    checkSession();
    async function checkSession() {
        const { data: { session } } = await supabase.auth.getSession();
        if (session) {
            window.location.href = '/admin';
        }
    }

    // 2. L√≥gica de Login
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        btn.innerText = "Entrando...";
        errorMsg.style.display = 'none';

        const email = (document.getElementById('email') as HTMLInputElement).value;
        const password = (document.getElementById('password') as HTMLInputElement).value;

        const { error } = await supabase.auth.signInWithPassword({
            email,
            password
        });

        if (error) {
            btn.innerText = "Ingresar";
            errorMsg.innerText = "Error: Credenciales inv√°lidas";
            errorMsg.style.display = 'block';
        } else {
            // ¬°√âXITO! Nos vamos al admin
            window.location.href = '/admin';
        }
    });
</script>

<style>
    body { margin: 0; font-family: 'Poppins', sans-serif; background: #7C2D96; }
    .login-wrapper { height: 100vh; display: flex; justify-content: center; align-items: center; }
    
    .glass-card { 
        background: white; padding: 40px; border-radius: 20px; 
        text-align: center; width: 90%; max-width: 350px; 
        box-shadow: 0 20px 50px rgba(0,0,0,0.2); 
    }
    
    .icon-lock { font-size: 3rem; margin-bottom: 15px; }
    h2 { margin: 0 0 5px 0; color: #333; }
    p { color: #666; margin-bottom: 20px; }
    
    input { 
        width: 100%; padding: 12px; margin: 8px 0; 
        border: 1px solid #ddd; border-radius: 10px; 
        box-sizing: border-box; font-size: 1rem;
    }
    
    button { 
        width: 100%; padding: 12px; margin-top: 15px;
        background: #7C2D96; color: white; border: none; 
        border-radius: 10px; font-weight: bold; font-size: 1rem; 
        cursor: pointer; transition: background 0.2s;
    }
    button:hover { background: #5b1e70; }
    
    .error-text { color: #ef4444; margin-top: 15px; font-size: 0.9rem; }
</style>