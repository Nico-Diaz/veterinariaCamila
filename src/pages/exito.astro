<style>
    /* Reutilizamos la base pero centramos todo */
    .main-container { width: 100%; max-width: 500px; padding: 20px; display: flex; flex-direction: column; gap: 20px; margin: 0 auto; }
    
    .booking-card { 
        background-color: #ffffff;
        padding: 3rem 2rem; 
        border-radius: 24px; 
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08); 
        border: 1px solid #f0f0f0; 
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }

    /* Animaci√≥n del Check */
    .check-container {
        width: 80px;
        height: 80px;
        background-color: #e6f9ed; /* Verde muy suave */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        animation: scaleIn 0.5s ease-out;
    }

    .check-icon {
        font-size: 3rem;
        color: #25D366; /* Verde WhatsApp/√âxito */
        font-weight: 700;
    }

    .success-title {
        color: var(--primary); /* Morado */
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .success-text {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    .info-box {
        background-color: #FAFAFA;
        padding: 20px;
        border-radius: 16px;
        margin-bottom: 30px;
        font-size: 0.95rem;
        color: #555;
    }

    .reminder {
        font-weight: 600;
        color: var(--primary);
    }

    .btn-primary {
        display: inline-block;
        width: 100%;
        background-color: var(--primary);
        color: white;
        text-decoration: none;
        padding: 18px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        transition: transform 0.2s, background-color 0.2s;
        box-shadow: 0 10px 20px rgba(124, 45, 150, 0.2);
    }
    .btn-primary:hover { 
        background-color: var(--primary-dark); 
        transform: translateY(-2px); 
    }

    @keyframes scaleIn {
        0% { transform: scale(0); }
        80% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }

    @media (max-width: 600px) {
        .main-container { padding: 0; min-height: 100dvh; }
        .booking-card { border-radius: 0; min-height: 100dvh; justify-content: center; border: none; }
    }
</style>